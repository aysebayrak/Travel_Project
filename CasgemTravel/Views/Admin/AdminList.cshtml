﻿@model List<CasgemTravel.DAL.Entities.Admin>


@{
    ViewBag.Title = "AdminList";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<h2 class="text-center">Admin İşlemleri</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kullanıcı Adı</th>
        <th>Şifre</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Username</td>
            <td>@item.Password</td>
            <td>@Html.ActionLink("Sil", "DeleteAdmin", new { id = @item.AdminID }, new { @class = "btn btn-outline-danger", onclick = "return confirm('Silmek İşlemini Onaylıyor Musunuz?')" }) </td>
            <td> <a href="/Admin/UpdateAdmin/@item.AdminID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>

<td> <a href="/Admin/AddAdmin/" class="btn btn-outline-info">Yeni Admin</a> </td>